<Window x:Class="Project.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <!-- Title -->
            <TextBlock Text="Machine Information" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />

            <!-- Machine ID 입력 -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Machine ID:" VerticalAlignment="Center" Margin="0,0,10,0" />
                <TextBox x:Name="MachineIdInput" Width="200" />
                <Button Content="Load" Margin="10,0,0,0" Click="OnLoadButtonClick" />
            </StackPanel>

            <!-- Machine 데이터 표시 -->
            <TextBlock Text="Machine ID:" />
            <TextBlock Text="{Binding Machine.MachineId}" />

            <TextBlock Text="Device ID:" />
            <TextBlock Text="{Binding Machine.DeviceId}" />

            <TextBlock Text="Manufacturer:" />
            <TextBlock Text="{Binding Machine.DeviceManufacturer}" />

            <TextBlock Text="Device Name:" />
            <TextBlock Text="{Binding Machine.DeviceName}" />

            <TextBlock Text="Type:" />
            <TextBlock Text="{Binding Machine.Type}" />
        </StackPanel>

        <!-- Frame for navigation -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

        <!-- Button to open SensorDataPage -->
        <Button Content="Open Sensor Data Page" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Click="OnOpenSensorDataPageClick" Width="200" Height="50"/>
    </Grid>
</Window>
