<Page  x:Class="Project.Views.SensorDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d"
      Title="Sensor Data" Height="450" Width="800">
    <Grid Margin="10" Background="White">
        <StackPanel>
            <!-- Title -->
            <TextBlock Text="Machine Detailed Information" FontWeight="Bold" FontSize="20" Margin="15, 15, 0, 0"/>

            <!-- Date Input -->
            <StackPanel Orientation="Horizontal" Margin="10" Background="LightGray">
                <TextBlock Text="Start Date :" VerticalAlignment="Center" Margin="5" FontSize="15"/>
                <TextBox x:Name="StartDateInput" Width="200" Margin="5" FontSize="15"/>
                <TextBlock Text="End Date : " VerticalAlignment="Center" Margin="5" FontSize="15"/>
                <TextBox x:Name="EndDateInput" Width="200" Margin="5" FontSize="15"/>
                <Button Content="Searching" Margin="5" Click="ListOnLoadButtonClick" Width="145" FontSize="15" Background="FloralWhite"/>
            </StackPanel>
            <lvc:CartesianChart x:Name="SensorChart" Height="313" RenderTransformOrigin="0.512,-0.041">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Date" Labels="{Binding ChartLabels}" LabelsRotation="15" />
                </lvc:CartesianChart.AxisX>                
            </lvc:CartesianChart>

            <!-- Cartesian Chart -->
        </StackPanel>
    </Grid>
</Page >
